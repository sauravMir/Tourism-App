<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".5">
            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"   />
            <com.daimajia.slider.library.Indicators.PagerIndicator
                android:id="@+id/custom_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                />
        </RelativeLayout>

       <!-- <ImageView
            android:id="@+id/ivtourDetailPic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight=".5"
            android:background="@android:color/transparent"
            android:padding="@dimen/ten"
            android:scaleType="fitCenter"
            android:src="@drawable/music_bg" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/five"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1.2">

            <TextView
                android:id="@+id/tvDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".3"
                android:gravity="left|center"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />

            <RatingBar
                android:id="@+id/rtBarDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_gravity="center"
                android:layout_weight=".3" />

            <TextView
                android:id="@+id/tvDetailDuration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".3"
                android:gravity="left|center"
                android:text="@string/duration"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />

            <TextView
                android:id="@+id/tvDetailExplain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_weight=".3"
                android:gravity="left|center"
                android:text="@string/detail"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen" />


        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:id="@+id/ibtnDetailBack"
        android:layout_width="@dimen/fifty"
        android:layout_height="@dimen/fifty"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_admin_move_l"/>

</RelativeLayout>
